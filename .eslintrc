extends: 'eslint:recommended'

env:
  node: true

rules:
  no-console: 0
  indent:
    - 2
    - 2
    - VariableDeclarator: 2
      SwitchCase: 1
  quotes:
    - 2
    - single
  no-use-before-define:
    - 2
    - nofunc
  strict:
    - 2
    - global
  no-multi-spaces: 0
  no-underscore-dangle: 0
  camelcase: 0
